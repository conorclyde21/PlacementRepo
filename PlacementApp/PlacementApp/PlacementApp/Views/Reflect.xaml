<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlacementApp.Views.Reflect">
    <ContentPage.Content>
        <StackLayout Spacing="20">
            <Label Text="Reflection Log" TextColor= "Green" />

            <Editor />

            <Button Text="Submit" BackgroundColor= "Green"/>

            <Button Text="Return to Main Menu"
                HorizontalOptions="Start" 
                TextColor="Green"
                BackgroundColor="White"
                Margin="0,20,0,0"
                BorderColor="Green"
                BorderWidth="3"
                CornerRadius="5"
                WidthRequest="120"
                HeightRequest="60" TextTransform="None" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>